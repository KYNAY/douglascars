{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/nixpak/main/nixpak-schema.json",
  "build": {
    "command": ["npm", "run", "build"]
  },
  "run": {
    "command": ["npm", "run", "start"]
  },
  "env": {
    "PORT": "3000",
    "HOST": "0.0.0.0",
    "NODE_ENV": "production"
  },
  "publicPort": 3000,
  "network": {
    "tcp-ports": [3000]
  },
  "persist": {
    "homedir": true
  }
}